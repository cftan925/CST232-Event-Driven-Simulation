<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.DynamicMemoryController">
   <top>
      <Label text="Dynamic Partition" BorderPane.alignment="CENTER">
         <font>
            <Font name="Comic Sans MS" size="26.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="29.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Choose Memory Size: " textAlignment="CENTER">
               <font>
                  <Font name="Consolas" size="22.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#goDynamicMemory1" prefWidth="150.0" text="20000">
               <font>
                  <Font name="Comic Sans MS" size="22.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#goDynamicMemory2" prefWidth="150.0" text="30000">
               <font>
                  <Font name="Comic Sans MS" size="22.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#goDynamicMemory3" prefWidth="150.0" text="40000">
               <font>
                  <Font name="Comic Sans MS" size="22.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#goDynamicMemory4" prefWidth="150.0" text="50000">
               <font>
                  <Font name="Comic Sans MS" size="22.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
